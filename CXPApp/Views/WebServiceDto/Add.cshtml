}
@model AccountingSeat

<div class="container-fluid">
    <h2>Agregar Asiento C.</h2>
    <form asp-controller="WebServiceDto" asp-action="Add" method="post">
        <div class="row">
            <div class="col-6 mb-3">
                <label for="Description" class="form-label">Descripcion</label>
                <input name="Description" type="text" class="form-control" id="description">
            </div>

            <div class="col-6 mb-3">
                <label for="IdInventoryType" class="form-label">Id Tipo Inv.</label>
                <input name="IdInventoryType" type="text" class="form-control" id="idInventoryType">
            </div>

            <div class=" control-section">
                <div id="wrapper" class="datetimepicker-section">
                    <div id="datetimepicker-control">
                        <ejs-datetimepicker id="datetimepicker" placeholder="Select a date and time"></ejs-datetimepicker>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="SeatDate" class="control-label">Fecha Asiento</label>
                <input asp-for="SeatDate" class="form-control" />
                <span asp-validation-for="SeatDate" class="text-danger"></span>
            </div>


        </div>
        <div class="row">
            <div class="col-6 mb-3">
                <label for="AccountingAccount" class="form-label">Cuenta Cont.</label>
                <input name="AccountingAccount" type="text" class="form-control" id="accountingAccount">
            </div>
            <div class="col-6 mb-3">
                <label for="MovementType" class="form-label">Tipo Mov.</label>
                <select name="MovementType" class="form-select form-select-sm" aria-label=".form-select-sm example" id="movementType">
                    <option value="DB">DB</option>
                    <option value="CR">CR</option>
                </select>
            </div>
        </div>

        <div class="row">


            <div class="col-6 mb-3">
                <label for="SeatAmount" class="form-label">Monto Asiento</label>
                <input name="SeatAmount" type="number" class="form-control" id="seatAmount">
            </div>
        </div>

        @*<div class="row">
            <div class="col-6 mb-3">
                <label for="IsActive" class="form-label">Estado</label>
                <select name="IsActive" class="form-select form-select-sm" aria-label=".form-select-sm example" id="isActive">
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                </select>
            </div>
        </div>*@

        <div class="row">
            <div class="col-12 mb-3 d-flex justify-content-end">
                <button type="submit" class="btn btn-outline-success" id="saveButton">Guardar</button>
            </div>
        </div>
    </form>
</div>
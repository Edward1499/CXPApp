@model List<AccountingSeat>
@{
    ViewData["Title"] = "Asiento Contable";
}

<div class="container">
    <div class="d-flex justify-content-between mb-3">
        <h2>Asiento Contable</h2>
        <a id="add" class="btn btn-primary" asp-controller="AccountingSeat" asp-action="Add">Agregar</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">
                    Cod. Asiento
                </th>
                <th scope="col">
                    Descripcion
                </th>
                <th scope="col">
                    Id Tipo Inventario
                </th>
                <th scope="col">
                    Cuenta Contable
                </th>
                <th scope="col">Tipo de Mov.</th>
                <th scope="col">
                    Fecha Asiento
                </th>
                <th scope="col">Monto Asiento</th>
                <th scope="col">Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var element in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => element.SeatId)</td>
                    <td>@Html.DisplayFor(m => element.Description)</td>
                    <td>@Html.DisplayFor(m => element.IdInventoryType)</td>
                    <td>@Html.DisplayFor(m => element.AccountingAccount)</td>
                    <td>@Html.DisplayFor(m => element.MovementType)</td>
                    <td>@Html.DisplayFor(m => element.SeatDate)</td>
                    <td>@Html.DisplayFor(m => element.SeatAmount)</td>

                    <td>

                        @if (element.IsActive)
                        {
                            <span>Activo</span>
                        }
                        else
                        {
                            <span>Inactivo</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-success" id="edit" asp-controller="AccountingSeat" asp-action="EditView" asp-route-id="@element.Id">Editar</a>
                        <a class="btn btn-danger" id="delete" asp-controller="AccountingSeat" asp-action="Delete" asp-route-id="@element.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@model List<DocumentEntry>
@{
    ViewData["Title"] = "Documento Entrada";
}

<div class="container">
    <div class="d-flex justify-content-between mb-3">
        <h2>Documento Entrada</h2>
        <a id="add" class="btn btn-primary" asp-controller="DocumentEntry" asp-action="Add">Agregar</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">
                    No. Documento
                </th>
                <th scope="col">
                    No. Factura a pagar
                </th>
                <th scope="col">
                    Fecha Documento
                </th>
                <th scope="col">Monto</th>
                <th scope="col">
                    Fecha de Registro
                </th>
                <th scope="col">Proveedor</th>
                <th scope="col">Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var element in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => element.DocumentNumber)</td>
                    <td>@Html.DisplayFor(m => element.InvoiceNumber)</td>
                    <td>@Html.DisplayFor(m => element.DocumentDay)</td>
                    <td>@Html.DisplayFor(m => element.amount)</td>
                    <td>@Html.DisplayFor(m => element.RegistrationDate)</td>
                    <td>@Html.DisplayFor(m => element.Provider)</td>
                    
                    <td>

                        @if (element.IsActive)
                        {
                            <span>Pendiente</span>
                        }
                        else
                        {
                            <span>Pagado</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-success" id="edit" asp-controller="DocumentEntry" asp-action="EditView" asp-route-id="@element.Id">Editar</a>
                        <a class="btn btn-danger" id="delete" asp-controller="DocumentEntry" asp-action="Delete" asp-route-id="@element.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
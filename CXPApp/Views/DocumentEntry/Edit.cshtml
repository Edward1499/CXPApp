@model DocumentEntry
@{
}

<div class="container-fluid">
    <h2>Modificar Documento</h2>
    <form asp-controller="DocumentEntry" asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-6 mb-3">
                <label for="DocumentNumber" class="form-label">No. Documento</label>
                <input asp-for="DocumentNumber" name="DocumentNumber" type="text" class="form-control" id="documentNumber">
            </div>

            <div class="col-6 mb-3">
                <label for="Provider" class="form-label">Proveedor</label>
                <select name="Provider" class="form-select form-select-sm" aria-label=".form-select-sm example" id="provider" asp-items="@ViewBag.Provider">
                    <option value="">Proveedor</option>
                </select>
            </div>
            </div>

            <div class="row">

            <div class="col-6 mb-3">
                <label for="InvoiceNumber" class="form-label">No. Factura</label>
                <input asp-for="InvoiceNumber" name="InvoiceNumber" type="text" class="form-control" id="invoiceNumber">
            </div>

            <div class="col-6 mb-3">
                <label for="amount" class="form-label">Monto</label>
                <input asp-for="amount" name="amount" type="text" class="form-control" id="amount">
            </div>

            </div>

        <div class="row">
            <div class="form-group">
                <label asp-for="DocumentDay" class="control-label">Fecha Documento</label>
                <input asp-for="DocumentDay" class="form-control" />
                <span asp-validation-for="DocumentDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistrationDate" class="control-label">Fecha Registro</label>
                <input asp-for="RegistrationDate" class="form-control" />
                <span asp-validation-for="RegistrationDate" class="text-danger"></span>
            </div>
        </div>
       
        <div class="row">
            <div class="col-6 mb-3">
                <label for="IsActive" class="form-label">Estado</label>
                <select asp-for="IsActive" name="IsActive" class="form-select form-select-sm" aria-label=".form-select-sm example" id="isActive">
                    <option value="true">Pendiente</option>
                    <option value="false">Pagado</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-12 mb-3 d-flex justify-content-end">
                <button type="submit" class="btn btn-outline-success" id="saveButton">Guardar</button>
            </div>
        </div>
    </form>
</div>